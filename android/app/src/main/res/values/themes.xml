<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DeliveryDelicatessen" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorSurface">@color/main</item>
        <item name="colorOnSurface">@color/secondary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>
        <!--        <item name="android:colorBackground">@color/secondary</item>-->
        <!--        <item name="colorOnBackground">@color/secondary</item>-->
        <item name="textAppearanceHeadline2">@style/TextStyleDefault</item>
        <item name="textAppearanceHeadline3">@style/TextStyleMutedDefault</item>
        <item name="textAppearanceHeadline4">@style/TextStyleSmallMutedDefault</item>
        <item name="textAppearanceHeadline5">@style/TextStyleTitle</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationViewStyle</item>
        <item name="navigationViewStyle">@style/NavigationViewStyle</item>
        <item name="cardViewStyle">@style/CardViewStyle</item>
        <item name="materialButtonStyle">@style/ButtonStyleDefault</item>
        <item name="spinnerStyle">@style/SpinnerStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItemStyle</item>
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>
        <item name="radioButtonStyle">@style/CustomRadioGroup</item>
        <item name="android:listDivider">@color/main</item>
    </style>

    <style name="Theme.DeliveryDelicatessen" parent="Base.Theme.DeliveryDelicatessen" />

    <style name="NavigationViewStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemIconTint">@color/muted</item>
        <item name="itemTextColor">@color/muted</item>
        <item name="android:background">@color/main</item>
        <item name="android:textSize">@dimen/fab_margin</item>
    </style>


    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginEnd">@dimen/margin_default_start_end</item>
        <item name="android:layout_marginStart">@dimen/margin_default_start_end</item>
    </style>

    <style name="TextInputLayoutStyle" parent="android:Widget.EditText">
        <!--        <item name="android:textSize">10sp</item>-->
        <item name="android:background">@drawable/custom_background_search_view</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">@dimen/padding_10</item>

    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/main</item>
        <item name="itemIconTint">?attr/colorSecondary</item>
        <item name="itemTextColor">?attr/colorSecondary</item>
        <item name="android:textSize">5sp</item>
        <item name="android:itemTextAppearance">?attr/textAppearanceHeadline5</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">?attr/colorSecondary</item>
    </style>

    <style name="CustomToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">?attr/colorSecondary</item>
        <item name="android:background">@color/main</item>
        <item name="borderWidth">0dp</item>
        <item name="spinBars">true</item>
    </style>

    <style name="SpinnerStyle" parent="@style/Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/custom_background_search_view</item>
        <item name="android:popupBackground">?attr/colorSurface</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="SpinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:padding">@dimen/margin_default</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--    <style name="Theme.AgendiaiParceiro.NoActionBar">-->
    <!--        <item name="windowActionBar">false</item>-->
    <!--        <item name="windowNoTitle">true</item>-->
    <!--    </style>-->

    <style name="Theme.AgendiaiParceiro.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AgendiaiParceiro.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonStyleDefault" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/green</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="ButtonStyleSecondary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/muted</item>
    </style>

    <style name="TextStyleSmallMutedDefault" parent="android:Widget.TextView">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/muted</item>
    </style>

    <style name="TextStyleTitle" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/muted</item>
    </style>

    <style name="TextStyleDefault" parent="android:Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/muted</item>
    </style>

    <style name="TextStyleMutedDefault" parent="android:Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/muted</item>
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">?attr/colorSecondary</item>
    </style>

    <style name="roundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="circle">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorSurface">@color/white</item>
        <item name="materialCalendarHeaderToggleButton">@style/Widget.AppTheme.MaterialCalendar.HeaderToggleButton</item>
    </style>

    <style name="Widget.AppTheme.MaterialCalendar.HeaderToggleButton" parent="Widget.MaterialComponents.MaterialCalendar.HeaderToggleButton">
        <item name="android:visibility">gone</item>
    </style>

    <style name="CustomRadioGroup" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:colorControlNormal">#7a7a7a</item>
        <item name="android:colorControlActivated">@color/green</item>
        <item name="android:colorControlHighlight">@color/green</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColorPrimaryDisableOnly">@color/green</item>
    </style>
</resources>